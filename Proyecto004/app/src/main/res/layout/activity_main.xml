<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aitor.proyecto004.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:id="@+id/et1"
        android:hint="Inserte el primer valor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/et1"
        android:layout_alignStart="@+id/et1"
        android:layout_marginTop="40dp"
        android:id="@+id/et2"
        android:hint="Ingrese el segundo valor" />

    <CheckBox
        android:text="Restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/check2"
        android:layout_below="@+id/check1"
        android:layout_alignStart="@+id/check1" />

    <CheckBox
        android:text="Sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/check1"
        android:layout_below="@+id/et2"
        android:layout_alignStart="@+id/et2" />

    <Button
        android:text="Operar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/check1"
        android:layout_alignBottom="@+id/check1"
        android:layout_toEndOf="@+id/et2" />

    <TextView
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/et2"
        android:layout_marginStart="20dp"
        android:id="@+id/tv1" />
</RelativeLayout>
