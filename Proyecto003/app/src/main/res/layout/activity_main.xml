<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grupo_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aitor.proyecto003.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/et1"
        android:hint="Ingresse el primer valor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/et1"
        android:layout_alignEnd="@+id/et1"
        android:layout_marginTop="17dp"
        android:id="@+id/et2"
        android:hint="Ingrese el segundo valor" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <RadioButton
        android:text="Restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_below="@+id/et2"
        android:layout_toEndOf="@+id/r1"
        android:layout_marginStart="61dp"
        android:layout_marginTop="10dp" />

    <RadioButton
        android:text="Sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_alignBaseline="@+id/r2"
        android:layout_alignBottom="@+id/r2"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginStart="15dp" />

    <Button
        android:text="Operar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="278dp"
        android:id="@+id/button"
        android:layout_below="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:onClick="operar" />

    <TextView
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/radioGroup2"
        android:id="@+id/tv1" />

</RelativeLayout>
